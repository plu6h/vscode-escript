{
	"name": "escript-lsp",
	"version": "0.2.0",
	"description": "escript-lsp",
	"contributors": [
		{
			"name": "POL Core Team",
			"url": "https://github.com/polserver"
		}
	],
	"license": "MIT",
	"publisher": "polserver",
	"categories": [],
	"keywords": [],
	"engines": {
		"vscode": "^1.52.0"
	},
	"activationEvents": [
		"*"
	],
	"repository": {
		"url": "https://github.com/polserver/vscode-escript"
	},
	"main": "./dist/extension",
	"contributes": {
		"languages": [
			{
				"id": "escript",
				"aliases": [
					"EScript",
					"escript"
				],
				"extensions": [
					".src",
					".inc",
					".em"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "escript",
				"scopeName": "source.escript",
				"path": "./grammars/escript.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "EScript",
			"properties": {
				"escript.ecompile.path": {
					"scope": "window",
					"type": "string",
					"description": "Specific path to use for ecompile.exe"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile && webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"compile": "js-yaml grammars/escript.yml > grammars/escript.json",
		"test": "mocha --require ts-node/register --ui tdd 'specs/**/*.ts'",
		"eslint": "eslint \"**/*.{js,ts}\""
	},
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	},
	"devDependencies": {
		"@types/mocha": "^8.2.0",
		"@types/node": "^12.19.11",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/parser": "^4.11.0",
		"eslint": "^7.16.0",
		"js-yaml": "^3.14.1",
		"mocha": "^8.2.1",
		"ts-loader": "^8.0.12",
		"ts-node": "^9.1.1",
		"typescript": "^4.1.3",
		"webpack": "^5.11.0",
		"webpack-cli": "^4.3.0"
	}
}
